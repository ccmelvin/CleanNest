FROM node:20-alpine3.19

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Update Alpine packages and install dependencies with security fixes
RUN apk update && apk upgrade && \
    apk add --no-cache dumb-init && \
    npm ci && \
    npm audit fix --force && \
    npm ls ip && npm ls @eslint/plugin-kit && \
    echo '{"dependencies":{"ip":"2.0.1"}}' > /tmp/package.json && \
    cd /tmp && npm i && cd /app && \
    cp -f /tmp/node_modules/ip/* /app/node_modules/ip/

# Don't copy the code - we'll use volumes instead

# Expose the port the app will run on
EXPOSE 3000

# Use dumb-init as PID 1 for proper signal handling
ENTRYPOINT ["/usr/bin/dumb-init", "--"]

# Start the development server with hot-reloading
CMD ["npm", "run", "dev"]